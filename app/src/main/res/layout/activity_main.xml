<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbowl.MainActivity">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="520dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbAfficher"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Votre grille"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='""'
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/GView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:numColumns="10">


                </GridView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/GViewDino"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:numColumns="5">

                    </GridView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="462dp">

                        <Button
                            android:id="@+id/btnAbandon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:text="Abandonner"
                            android:textFontWeight="16" />

                        <Button
                            android:id="@+id/btnNvPlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="Rejouer"
                            android:textFontWeight="16" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/txtGagnant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtadversaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grille de l'adversaire"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/GViewAdv"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:numColumns="10">

                </GridView>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="189dp"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/GViewAdvDino"
                        android:layout_width="47dp"
                        android:layout_height="144dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:numColumns="1">

                    </GridView>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>